extends base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="username", type="text", placeholder="Username", required)
        input(name="password", type="password", placeholder="Password", required)
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=ccf7238f01d21f284b48") Continue with Github
    hr
    div
        span Don't have an accout? 
        a(href="/join") Create now &rarr;