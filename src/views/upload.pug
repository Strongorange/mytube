extends base

block content 
    div.upload__container
        div.upload__video
            video#preview
            button#actionBtn.social__btn Start Recording
        if errorMessage
            span=errorMessage

        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File
            input(name="video", id="video", type="file", accept="video/*", required)
            label(for="thumb") Thumbnail File
            input(name="thumb", id="thumb", type="file", accept="image/*", required)
            input(placeholder="Title", name="title", type="text", required, maxlength=30)
            input(placeholder="Description", name="description", type="text", required, minlength=2)
            input(placeholder="Hashtags, separated by comma.", name="hashtags", type="text", required)
            input(value="Upload Video", type="submit")
block scripts
    script(src="/assets/js/recorder.js")