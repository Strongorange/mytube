extends base

block content 
    if errorMessage
        span=errorMessage

    form(method="POST")
        input(placeholder="Title", name="title", type="text", required, maxlength=30)
        input(placeholder="Description", name="description", type="text", required, minlength=2)
        input(placeholder="Hashtags, separated by comma.", name="hashtags", type="text", required)
        input(value="Upload Video", type="submit")